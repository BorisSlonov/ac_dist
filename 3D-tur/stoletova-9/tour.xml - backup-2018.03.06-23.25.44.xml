<krpano version="1.19" title="">

	<include url="skin/vtourskin.xml" />
	
	<include url="nadir.xml" />
	
<action name="get_coordinates">
	sub(mouse_y, mouse.y, 2);
	screentosphere(mouse.x, mouse_y, toh, tov);
	roundval(toh, 2);
	roundval(tov, 2);
	txtadd(txt, 'ath=&quot;', get(toh), '&quot; atv=&quot;', get(tov), '&quot;');
	copy(plugin[clipboard].text, txt);
	trace('ath=', toh, ' atv=', tov, ' h=', view.hlookat);
	//trace(px, ' ', py);
</action>

<events name="coordinates" onmousedown="get_coordinates();" keep="true" />

	<!-- customize skin settings: maps, gyro, webvr, thumbnails, tooltips, layout, design, ... -->
	<skin_settings maps="false"
	               maps_type="bing"
	               maps_bing_api_key=""
	               maps_zoombuttons="false"
	               gyro="true"
	               title="true"
	               thumbs="true"
	               thumbs_width="120" thumbs_height="80" thumbs_padding="10" thumbs_crop="0|40|240|160"
	               thumbs_opened="true"
	               thumbs_text="true"
	               thumbs_dragging="true"
	               thumbs_onhoverscrolling="false"
	               thumbs_scrollbuttons="false"
	               thumbs_scrollindicator="false"
	               thumbs_loop="false"
	               tooltips_thumbs="false"
	               tooltips_hotspots="true"
	               tooltips_mapspots="false"
	               loadscene_flags="MERGE"
	               loadscene_blend="BLEND(0.5)"
	               loadingtext="загружается панорама..."
